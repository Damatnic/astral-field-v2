# Quantum's Backup Configuration

# Database Configuration
POSTGRES_HOST=postgres.astralfield.svc.cluster.local
POSTGRES_PORT=5432
POSTGRES_USER=astralfield
POSTGRES_DB=astralfield

# AWS Configuration
AWS_REGION=us-east-1
S3_BUCKET=astralfield-backups-prod
S3_PREFIX=database/production

# Backup Settings
BACKUP_RETENTION_DAYS=30
COMPRESSION_LEVEL=9
ENCRYPTION_ENABLED=true
PARALLEL_JOBS=4

# Notification Settings
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_RECIPIENTS=devops@astralfield.com,database@astralfield.com

# Monitoring
PROMETHEUS_GATEWAY=http://prometheus-pushgateway.astralfield-monitoring.svc.cluster.local:9091
ENABLE_METRICS=true

# Security
GPG_RECIPIENT=backup@astralfield.com
BACKUP_ENCRYPTION_KEY_ID=ABCD1234

# Performance
MAX_BACKUP_SIZE_GB=100
BACKUP_TIMEOUT_MINUTES=60
VERIFY_BACKUP=true

# Disaster Recovery
DR_S3_BUCKET=astralfield-dr-backups
DR_AWS_REGION=us-west-2
CROSS_REGION_REPLICATION=true

# Point-in-Time Recovery
WAL_BACKUP_ENABLED=true
WAL_RETENTION_DAYS=7
CONTINUOUS_ARCHIVING=true

# Test Restore
TEST_RESTORE_ENABLED=true
TEST_RESTORE_SCHEDULE="0 4 * * 0"  # Weekly on Sunday at 4 AM
TEST_RESTORE_RETENTION_HOURS=24