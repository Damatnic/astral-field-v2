# AstralField Production Environment Configuration
# Copy this to .env.production and configure with your production values

# Database Configuration (Required)
DATABASE_URL="postgresql://username:password@localhost:5432/astralfield_prod"
DIRECT_URL="postgresql://username:password@localhost:5432/astralfield_prod"

# Authentication & Security
NEXTAUTH_SECRET="your-super-secure-random-string-64-chars-minimum"
NEXTAUTH_URL="https://your-domain.com"
JWT_SECRET="another-secure-random-string-for-jwt-signing"

# Redis Configuration (Required for caching and rate limiting)
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""

# Rate Limiting Configuration
RATE_LIMIT_ENABLED="true"
RATE_LIMIT_STRICT_MODE="true"

# Database Connection Pool Settings
DB_MAX_CONNECTIONS="20"
DB_CONNECTION_TIMEOUT="10000"
DB_QUERY_TIMEOUT="30000"
DB_RETRY_ATTEMPTS="3"
DB_RETRY_DELAY="1000"
DB_LOG_QUERIES="false"
DB_SLOW_QUERY_THRESHOLD="1000"

# Logging Configuration
LOG_LEVEL="info"
LOG_FILE="false"
LOG_DATABASE="true"
LOG_ERRORS_TO_FILE="true"

# Error Tracking & Monitoring
SENTRY_DSN=""
SENTRY_ENVIRONMENT="production"
ENABLE_ERROR_TRACKING="true"
ENABLE_PERFORMANCE_MONITORING="true"

# API Keys (Optional - for enhanced features)
ESPN_API_KEY=""
SLEEPER_API_KEY=""
NFL_API_KEY=""

# External Service URLs
ESPN_API_URL="https://site.api.espn.com/apis/site/v2/sports/football/nfl"
SLEEPER_API_URL="https://api.sleeper.app/v1"

# CORS Settings
CORS_ORIGIN="https://your-domain.com"
CORS_CREDENTIALS="true"

# File Upload Settings (if applicable)
MAX_FILE_SIZE="5242880"  # 5MB
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp"

# Session Settings
SESSION_MAX_AGE="604800"  # 7 days
SESSION_UPDATE_AGE="86400"  # 1 day

# Security Headers
SECURE_HEADERS_ENABLED="true"
CSP_ENABLED="true"

# Performance Settings
ENABLE_COMPRESSION="true"
CACHE_STATIC_ASSETS="true"
CACHE_MAX_AGE="31536000"  # 1 year

# Development/Debug Settings (set to false in production)
ENABLE_DEBUG_LOGS="false"
SHOW_STACK_TRACES="false"
ENABLE_QUERY_LOGGING="false"

# Webhook Settings (if using webhooks)
WEBHOOK_SECRET=""
WEBHOOK_TIMEOUT="30000"

# Email Configuration (if using email notifications)
SMTP_HOST=""
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER=""
SMTP_PASSWORD=""
EMAIL_FROM="noreply@your-domain.com"

# Analytics (if using analytics)
GOOGLE_ANALYTICS_ID=""
MIXPANEL_TOKEN=""

# Feature Flags
ENABLE_CHAT="true"
ENABLE_TRADES="true"
ENABLE_WAIVERS="true"
ENABLE_DRAFT="true"
ENABLE_ANALYTICS="true"
ENABLE_LIVE_SCORING="true"

# Backup Configuration
ENABLE_AUTO_BACKUP="true"
BACKUP_INTERVAL="86400"  # 24 hours
BACKUP_RETENTION="30"    # 30 days

# Health Check Configuration
HEALTH_CHECK_ENABLED="true"
HEALTH_CHECK_INTERVAL="30"  # seconds

# Application Settings
APP_NAME="AstralField"
APP_VERSION="2.1.0"
APP_DESCRIPTION="Enterprise Fantasy Football Platform"
CONTACT_EMAIL="support@your-domain.com"
SUPPORT_URL="https://your-domain.com/support"

# CDN Configuration (if using CDN)
CDN_URL=""
STATIC_ASSETS_URL=""

# Caching Strategy
CACHE_STRATEGY="redis"
CACHE_TTL_DEFAULT="3600"  # 1 hour
CACHE_TTL_PLAYERS="900"   # 15 minutes
CACHE_TTL_SCORES="60"     # 1 minute