{
  "ci": {
    "collect": {
      "url": [
        "https://web-daxgcan59-astral-productions.vercel.app",
        "https://web-daxgcan59-astral-productions.vercel.app/auth/signin",
        "https://web-daxgcan59-astral-productions.vercel.app/dashboard"
      ],
      "numberOfRuns": 3,
      "settings": {
        "chromeFlags": "--no-sandbox --disable-dev-shm-usage",
        "preset": "desktop",
        "throttling": {
          "rttMs": 40,
          "throughputKbps": 10240,
          "cpuSlowdownMultiplier": 1
        },
        "emulatedFormFactor": "desktop",
        "locale": "en-US"
      }
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "categories:performance": ["error", {"minScore": 0.85}],
        "categories:accessibility": ["error", {"minScore": 0.95}],
        "categories:best-practices": ["error", {"minScore": 0.90}],
        "categories:seo": ["error", {"minScore": 0.85}],
        "first-contentful-paint": ["error", {"maxNumericValue": 2000}],
        "largest-contentful-paint": ["error", {"maxNumericValue": 2500}],
        "cumulative-layout-shift": ["error", {"maxNumericValue": 0.1}],
        "speed-index": ["error", {"maxNumericValue": 3000}],
        "interactive": ["error", {"maxNumericValue": 3800}],
        "total-blocking-time": ["error", {"maxNumericValue": 200}],
        "unused-javascript": ["warn", {"maxNumericValue": 100000}],
        "unused-css-rules": ["warn", {"maxNumericValue": 50000}],
        "render-blocking-resources": "off",
        "uses-webp-images": "warn",
        "efficient-animated-content": "warn",
        "uses-optimized-images": "warn",
        "modern-image-formats": "warn",
        "uses-text-compression": ["error", {"minScore": 0.8}],
        "uses-responsive-images": "warn"
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    },
    "server": {
      "port": 9001,
      "storage": "./lighthouse-results"
    }
  }
}
