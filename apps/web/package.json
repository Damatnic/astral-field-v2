{
  "name": "@astralfield/web",
  "version": "3.0.0",
  "private": true,
  "scripts": {
    "build": "prisma generate && next build",
    "dev": "next dev --port 3001",
    "lint": "next lint",
    "start": "next start --port 3000",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --watchAll=false",
    "test:unit": "jest --testPathPattern=\"__tests__/(components|lib|utils)\"",
    "test:integration": "jest --testPathPattern=\"__tests__/integration\"",
    "test:security": "jest --testPathPattern=\"__tests__/security\"",
    "test:accessibility": "jest --testPathPattern=\"__tests__/accessibility\"",
    "test:performance": "jest --testPathPattern=\"__tests__/performance\"",
    "test:auth": "jest --testPathPattern=\"__tests__/(components/auth|integration/auth|security/auth)\"",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:security && npm run test:accessibility && npm run test:e2e",
    "test:critical": "npm run test:auth && npm run test:security",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:performance": "playwright test --project=performance",
    "test:e2e:visual": "playwright test --project=visual",
    "test:e2e:accessibility": "playwright test --project=accessibility",
    "test:e2e:mobile": "playwright test --project=\"Mobile Chrome\"",
    "coverage:report": "npm run test:coverage && open coverage/lcov-report/index.html",
    "coverage:merge": "nyc merge coverage coverage/merged-coverage.json",
    "coverage:summary": "nyc report --reporter=text-summary",
    "coverage:analysis": "tsx ../../scripts/test-coverage-report.ts",
    "coverage:badge": "tsx ../../scripts/generate-coverage-badge.ts",
    "coverage:trend": "tsx ../../scripts/coverage-trend.ts",
    "clean": "rimraf .next .turbo coverage test-results e2e-results mutation-reports",
    "clean:all": "npm run clean && rimraf node_modules",
    "seed:prod": "tsx ../../scripts/seed-production-users.ts",
    "seed:demo": "tsx scripts/create-demo-users.ts",
    "setup:demo": "prisma db push && npm run seed:demo",
    "db:migrate": "tsx scripts/simple-migration.js",
    "db:reset": "prisma db push --force-reset && npm run db:migrate",
    "deploy:prod": "prisma generate && next build",
    "postinstall": "prisma generate",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "analyze": "cross-env ANALYZE=true npm run build",
    "bundle-analyzer": "cross-env BUNDLE_ANALYZE=true npm run build"
  },
  "dependencies": {
    "@astralfield/providers": "file:../../providers/sleeper",
    "@astralfield/ui": "file:../../packages/ui",
    "@auth/prisma-adapter": "^2.10.0",
    "@hello-pangea/dnd": "^18.0.1",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^3.3.4",
    "@prisma/client": "^5.7.1",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tanstack/react-query": "^5.89.0",
    "@vercel/analytics": "^1.1.4",
    "@vercel/speed-insights": "^1.0.12",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "critters": "^0.0.23",
    "framer-motion": "^11.18.2",
    "isomorphic-dompurify": "^2.28.0",
    "jose": "^5.10.0",
    "js-cookie": "^3.0.5",
    "lucide-react": "^0.417.0",
    "nanoid": "^5.0.5",
    "next": "^14.1.0",
    "next-auth": "^5.0.0-beta.29",
    "next-themes": "^0.2.1",
    "otplib": "^12.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.50.0",
    "react-hot-toast": "^2.4.1",
    "recharts": "^2.12.0",
    "sonner": "^1.4.0",
    "swr": "^2.0.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "vaul": "^0.9.0",
    "web-vitals": "^5.1.0",
    "zod": "^3.23.8",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.5",
    "@next/bundle-analyzer": "^14.0.0",
    "@playwright/test": "^1.55.1",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.12",
    "@types/js-cookie": "^3.0.6",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.11.17",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/ws": "^8.18.1",
    "autoprefixer": "^10.4.17",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "jest-junit": "^16.0.0",
    "jsdom": "^27.0.0",
    "node-mocks-http": "^1.14.1",
    "nyc": "^15.1.0",
    "postcss": "^8.4.35",
    "prettier": "^3.1.1",
    "prisma": "^5.7.1",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  }
}
