# ===========================================
# ASTRAL FIELD V2.1 - Environment Variables
# ===========================================

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Primary database connection (pooled for better performance)
DATABASE_URL="postgresql://user:password@localhost:5432/astralfield_v21?pgbouncer=true&connection_limit=20"

# Direct database connection (non-pooled for migrations and admin operations)
DATABASE_URL_UNPOOLED="postgresql://user:password@localhost:5432/astralfield_v21"

# Neon Database (Production example)
# DATABASE_URL="postgresql://user:password@ep-example.us-east-1.aws.neon.tech/astralfield_prod?sslmode=require"
# DATABASE_URL_UNPOOLED="postgresql://user:password@ep-example.us-east-1.aws.neon.tech/astralfield_prod?sslmode=require&pgbouncer=false"

# ===========================================
# AUTHENTICATION CONFIGURATION
# ===========================================
# NextAuth.js configuration
NEXTAUTH_SECRET="your-nextauth-secret-min-32-characters-long"
NEXTAUTH_URL="http://localhost:3000"

# Auth0 configuration
AUTH0_SECRET="your-auth0-secret-here"
AUTH0_BASE_URL="http://localhost:3000"
AUTH0_ISSUER_BASE_URL="https://your-domain.auth0.com"
AUTH0_CLIENT_ID="your-auth0-client-id"
AUTH0_CLIENT_SECRET="your-auth0-client-secret"

# ===========================================
# AI SERVICES CONFIGURATION
# ===========================================
# Anthropic AI for fantasy football intelligence
ANTHROPIC_API_KEY="your-anthropic-api-key"

# OpenAI (alternative AI service)
OPENAI_API_KEY="your-openai-api-key"

# ===========================================
# SPORTS DATA APIS
# ===========================================
# Sports data API for NFL information
SPORTSDATA_API_KEY="your-sportsdata-api-key"
NFL_API_KEY="your-nfl-api-key"

# Fantasy sports platform integrations
SLEEPER_API_KEY="your-sleeper-api-key"
ESPN_API_KEY="your-espn-api-key"
YAHOO_API_KEY="your-yahoo-api-key"

# ===========================================
# CACHING & PERFORMANCE
# ===========================================
# Redis for caching and real-time features
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD="your-redis-password"

# Upstash Redis (Serverless Redis for Vercel)
UPSTASH_REDIS_REST_URL="https://your-database.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-token"

# ===========================================
# REAL-TIME FEATURES
# ===========================================
# Socket.io configuration
NEXT_PUBLIC_SOCKET_URL="http://localhost:3001"
SOCKET_IO_SECRET="your-socket-io-secret"

# WebSocket configuration
WS_PORT="3001"
WS_SECRET="your-websocket-secret"

# ===========================================
# EMAIL & NOTIFICATIONS
# ===========================================
# Email service (SendGrid, Resend, etc.)
SENDGRID_API_KEY="your-sendgrid-api-key"
EMAIL_FROM="noreply@astralfield.com"

# Resend email service
RESEND_API_KEY="your-resend-api-key"

# Push notifications
VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"
VAPID_EMAIL="mailto:admin@astralfield.com"

# ===========================================
# MONITORING & ERROR TRACKING
# ===========================================
# Sentry error tracking
NEXT_PUBLIC_SENTRY_DSN="https://your-dsn@sentry.io/project-id"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="astral-field-v21"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"

# Analytics
NEXT_PUBLIC_GA_TRACKING_ID="G-XXXXXXXXXX"
POSTHOG_KEY="your-posthog-key"

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# CSRF protection
CSRF_SECRET="your-csrf-secret-32-chars-long"

# Rate limiting
RATE_LIMIT_SECRET="your-rate-limit-secret"
RATE_LIMIT_REDIS_URL="redis://localhost:6379"

# Encryption keys
ENCRYPTION_KEY="your-encryption-key-32-characters"
JWT_SECRET="your-jwt-secret-min-32-characters"

# ===========================================
# FILE STORAGE & CDN
# ===========================================
# AWS S3 configuration
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="astralfield-uploads"

# Cloudinary for image optimization
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# ===========================================
# DEVELOPMENT ENVIRONMENT
# ===========================================
NODE_ENV="development"
NEXT_PUBLIC_APP_ENV="development"
NEXT_PUBLIC_APP_VERSION="2.1.0"

# Debug settings
DEBUG="app:*"
LOG_LEVEL="info"

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================
# Vercel deployment
VERCEL_TOKEN="your-vercel-token"
VERCEL_ORG_ID="your-vercel-org-id"
VERCEL_PROJECT_ID="your-vercel-project-id"

# GitHub integration
GITHUB_TOKEN="your-github-token"
GITHUB_WEBHOOK_SECRET="your-github-webhook-secret"

# ===========================================
# PRODUCTION OVERRIDES
# ===========================================
# Production-specific URLs (uncomment for production)
# NEXTAUTH_URL="https://astralfield.com"
# AUTH0_BASE_URL="https://astralfield.com"
# NEXT_PUBLIC_SOCKET_URL="https://api.astralfield.com"

# Production database (Neon, Supabase, etc.)
# DATABASE_URL="postgresql://user:password@your-prod-host/astralfield_prod?sslmode=require&pgbouncer=true"

# Production Redis (Upstash, Redis Cloud, etc.)
# REDIS_URL="rediss://default:password@redis-host:6380"

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/disable features
ENABLE_AI_FEATURES="true"
ENABLE_REAL_TIME="true"
ENABLE_ANALYTICS="true"
ENABLE_NOTIFICATIONS="true"
ENABLE_BETA_FEATURES="false"

# ===========================================
# BACKUP & MAINTENANCE
# ===========================================
# Database backup configuration
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS="30"
BACKUP_S3_BUCKET="astralfield-backups"

# Maintenance mode
MAINTENANCE_MODE="false"
MAINTENANCE_MESSAGE="We're performing scheduled maintenance. Back soon!"

# ===========================================
# NOTES
# ===========================================
# 1. Copy this file to .env.local for development
# 2. Never commit .env.local to version control
# 3. Use strong, unique secrets for production
# 4. Rotate secrets regularly
# 5. Use environment-specific values
# 6. Configure all required services before deployment