# Database Configuration
DATABASE_URL="postgresql://user:password@host:5432/astralfield?sslmode=require"
DIRECT_DATABASE_URL="postgresql://user:password@host:5432/astralfield?sslmode=require"

# Authentication (Auth0)
AUTH0_DOMAIN="your-domain.auth0.com"
AUTH0_CLIENT_ID="your-client-id"
AUTH0_CLIENT_SECRET="your-client-secret"
AUTH0_AUDIENCE="https://your-domain.auth0.com/api/v2/"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3007"
NEXTAUTH_SECRET="generate-a-secure-random-string-here"

# Application Configuration
NODE_ENV="development"
PORT="3007"

# ESPN API (Optional - uses free public API)
ESPN_BASE_URL="https://site.api.espn.com/apis/site/v2/sports/football/nfl"

# Redis (Optional - for advanced caching)
REDIS_URL="redis://localhost:6379"

# Monitoring & Analytics (Optional)
SENTRY_DSN=""
NEXT_PUBLIC_GA_ID=""

# Feature Flags (Optional)
ENABLE_AI_COACH="true"
ENABLE_REAL_TIME="true"
ENABLE_ANALYTICS="true"

# Rate Limiting
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="60000"

# Email (Optional - for notifications)
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASSWORD=""
FROM_EMAIL="noreply@astralfield.com"

# AWS (Optional - for file uploads)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET=""

# Stripe (Optional - for payments)
STRIPE_PUBLIC_KEY=""
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
