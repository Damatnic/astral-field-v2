{
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  
  "regions": ["iad1"],
  
  "github": {
    "autoAlias": false,
    "silent": true
  },
  
  "cleanUrls": true,
  "trailingSlash": false,
  
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "index, follow"
        },
        {
          "key": "X-Powered-By",
          "value": ""
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://astral-field-v1.vercel.app"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ],
  
  "redirects": [
    {
      "source": "/home",
      "destination": "/",
      "permanent": true
    }
  ],
  
  "rewrites": [
    {
      "source": "/health-check",
      "destination": "/api/health"
    },
    {
      "source": "/status",
      "destination": "/api/health"
    }
  ],
  
  "env": {
    "NODE_ENV": "production"
  }
}